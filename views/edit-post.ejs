<%- include("partials/header.ejs") %>

<div class="d-flex flex-column justify-content-center">
    <h2 class="text-center page-title">Editing a post</h2>

        <div class="form-box">
            <form action="/edit-post" method="post">
                <div class="row">
                <div class="col-3">
                    <label class="label-title" for="title">Post Title:</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" name="title" value="<%= posts[index].title %>" required>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <label class="label-title" for="content">Post Content:</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control" name="content" rows="20" cols="60" required><%= posts[index].htmlContent %></textarea>
                </div>
            </div>
            <div>
                <input class="btn btn-secondary button-to-edit" type="submit" value="Edit post">
            </div>
        </form>
    </div>
</div>


