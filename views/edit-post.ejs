<%- include("partials/header.ejs") %>

<h2>Editing a post</h2>

<form action="/edit-post" method="post">
    <label for="title">Post Title:</label>
    <input type="text" name="title" value="<%= posts[index].title %>" required>
    <label for="content">Post Content:</label>
    <textarea name="content" rows="20" cols="80" required><%= posts[index].htmlContent %></textarea>
    <input type="submit" value="Edit post">
</form>

