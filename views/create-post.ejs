<%- include("partials/header.ejs") %>

<div class="d-flex flex-column justify-content-center">

<h2 class="text-center">Writing a new post</h2>

<div class="form-box">
    <form action="/create-post" method="post">
    <label class="label-title" for="title">Post Title:</label>
    <input type="text" class="form-control" name="title" placeholder="Enter Post Title" required>
    <label class="label-title" for="content">Post Content:</label>
    <textarea class="form-control" name="content" rows="20" cols="80" placeholder="Write your post" required></textarea>
    <div class="text-center">
        <input class="btn btn-secondary button-to-create" type="submit" value="Create post">
    </div>
</form>
</div>

</div>

